{
    "name": "user-api",
    "description": "Sample CRUD user REST API",
    "autoload": {
        "psr-4": {
            "UserApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UserApi\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require": {
        "silex/silex": "^2.0",
        "nette/database": "^2.4",
        "stefk/jval": "dev-master"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.6.4",
        "symfony/browser-kit": "^3.2",
        "phpunit/phpunit": "^5.7"
    },
    "scripts": {
        "static": "./vendor/bin/phpstan analyse src tests --level 4",
        "tests": "./vendor/bin/phpunit --colors=always"
    }
}
